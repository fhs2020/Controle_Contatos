@model CadastroContatos.Models.Conversa

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar</h2>

<h4>Conversa</h4>
<hr />
<div class="row">
    <div class="col-md-7">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ClienteId" />
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="UsuarioNome" class="control-label">Autor</label>
                <input asp-for="UsuarioNome" class="form-control" />
                <span asp-validation-for="UsuarioNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClienteNome" class="control-label">Cliente</label>
                <input asp-for="ClienteNome" class="form-control" />
                <span asp-validation-for="ClienteNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descrição" class="control-label">Assunto</label>
                <textarea asp-for="Descrição" class="form-control"></textarea>
                <span asp-validation-for="Descrição" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataHoraConversa" class="control-label">Data</label>
                <input asp-for="DataHoraConversa" class="form-control" />
                <span asp-validation-for="DataHoraConversa" class="text-danger"></span>
            </div>
 
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Voltar para lista de conversas", "Index", new { clienteId = Model.ClienteId })
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
