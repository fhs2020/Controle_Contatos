@model CadastroContatos.Models.ConversaViewModels

@{
    ViewData["Title"] = "Create";
}

<h2>Adicionar anotações para @Model.ClienteNome</h2>


<hr />
<div class="row">
    <div class="col-md-6">


        <form asp-action="Create">
            @Html.HiddenFor(model => model.ClienteId)
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Descrição" class="control-label">Anotações sobre último contato com o cliente</label>
                <textarea asp-for="Descrição" class="form-control"></textarea>
                <span asp-validation-for="Descrição" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Salvar conversa" class="btn btn-primary" />
            </div>
        </form>

    </div>
</div>

<div>
    <a asp-action="voltar para lista de conversas"></a>
</div>
<form>
    @Html.ActionLink("Voltar para lista de conversas", "Index", new { clienteId = Model.ClienteId })
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
