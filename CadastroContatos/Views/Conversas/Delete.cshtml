@model CadastroContatos.Models.Conversa

@{
    ViewData["Title"] = "Delete";
}

<h2>Excluir</h2>

<h3>Certeza que deseja excluir?</h3>
<div>
    <h4>Conversa</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Autor
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UsuarioNome)
        </dd>
        <dt>
            Cliente
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ClienteNome)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Descrição)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Descrição)
        </dd>
        <dt>
           Data
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DataHoraConversa)
        </dd>

    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
    </form>

    <form>
        @Html.ActionLink("Voltar para lista de conversas", "Index", new { clienteId = Model.ClienteId })
    </form>
</div>
